<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/assignment_cardview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        app:cardCornerRadius="0dp"
        app:cardUseCompatPadding="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/profile_bg"


            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignments"
                android:textSize="@dimen/_24ssp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:padding="8dp"

            android:layout_centerInParent="true"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:letterSpacing="0.04"
            android:lineSpacingExtra="2dp"
            android:textAllCaps="true"
            android:layout_gravity="center" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <ProgressBar
        android:id="@+id/progressBar_assign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/lightGreen2"
        android:layout_centerInParent="true" />

    <ListView
        android:id="@+id/listView_assign"
        android:layout_width="match_parent"
        android:layout_below="@+id/assignment_cardview"
        android:layout_height="wrap_content"
        android:dividerHeight="@dimen/_10sdp"
        android:divider="@android:color/transparent"
        android:layout_marginHorizontal="@dimen/_13sdp"
        android:background="@color/white"
        android:layout_above="@id/progressBar_assign"
         />

</RelativeLayout>
