<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the button is pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#C8C5C5"/>
            <corners android:radius="9dp"/>
            <stroke android:width="1dp" android:color="#979797"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"/> <!-- White background color -->
            <corners android:radius="@dimen/_20sdp"/> <!-- Small rounded corners -->
            <stroke android:width="1dp" android:color="#DADCE0"/> <!-- Light grey border -->
        </shape>
    </item>
</selector>
