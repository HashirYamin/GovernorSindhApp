<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".PhoneNumberVerification">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:text="OTP VERIFICATION"-->
<!--                android:textSize="30dp"-->
<!--                android:fontFamily="@font/antonfont"-->
<!--                android:textColor="@color/black"-->
<!--                android:layout_marginTop="20dp"/>-->
            <LinearLayout
                android:id="@+id/current_activity_no_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="20"
                android:layout_marginTop="50dp"
                >
                <RelativeLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/circular_bg"
                    android:backgroundTint="@color/gray">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="1"
                        android:textColor="@android:color/white"
                        android:textSize="18dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/circular_bg"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/my_primary"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="2"
                        android:textColor="@android:color/white"
                        android:textSize="18dp" />
                </RelativeLayout>
            </LinearLayout>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/otp_verification_lottie"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_below="@+id/current_activity_no_otp"
                app:lottie_rawRes="@raw/otpverifylottie"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/enter_otp_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter OTP sent to your Mobile Number:"
                android:layout_gravity="center_vertical"
                android:letterSpacing="0.08"
                android:textStyle="bold"
                android:layout_below="@+id/otp_verification_lottie"
                android:textSize="25dp"
                android:layout_marginTop="30dp"
                android:layout_weight="5"
                />
            <EditText
                android:id="@+id/otp_verification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="OTP"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="6"
                android:layout_marginTop="20dp"
                android:background="@drawable/phone_btn"
                android:elevation="10dp"
                android:layout_below="@+id/enter_otp_text"
                />
            <LinearLayout
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/otp_verification"
                android:layout_weight="10"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:background="@drawable/btn_rounded_corner"
                    android:textColor="@color/white"
                    android:id="@+id/otp_next_btn"
                    />
                <ProgressBar
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/my_primary"
                    android:id="@+id/otp_progress_bar"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/resend_otp_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Resend Otp in 30 seconds"
                android:layout_weight="10"
                android:layout_below="@+id/next"

                />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>


