<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NewsFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_320sdp"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_centerHorizontal="true"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/policy"
            android:layout_width="@dimen/_145sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:backgroundTint="@color/lightGreen2"
            android:layout_marginLeft="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_6sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <View
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/views_bg"
                    >
                </View>
                <View
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/guidance_policy_icon"
                    >
                </View>

                <TextView
                    android:id="@+id/policy_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_55sdp"
                    android:layout_centerVertical="true"
                    android:text="Policy"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/DarkGreen" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/guidance"
            android:layout_width="@dimen/_145sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:backgroundTint="@color/lightGreen2"
            android:layout_marginLeft="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_6sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <View
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/views_bg"
                    >
                </View>
                <View
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/guidance"
                    >
                </View>

                <TextView
                    android:id="@+id/guidance_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_55sdp"
                    android:layout_centerVertical="true"
                    android:text="Guidance"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/DarkGreen" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>
</RelativeLayout>
